#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Type check
echo "Type checking..."
yarn type-check

# Check for Chinese characters in staged files
echo "Checking for Chinese characters..."
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx|md|mdx)$' || true)

if [ -n "$STAGED_FILES" ]; then
  for file in $STAGED_FILES; do
    if LC_ALL=C grep -n '[一-龥]' "$file" 2>/dev/null; then
      echo "[ERROR] Chinese characters found in: $file"
      echo "Please remove Chinese characters from code and comments."
      exit 1
    fi
  done
fi

# Check for console.log (warning only)
echo "Checking for console.log..."
if git diff --cached | grep -E '^\+.*console\.(log|debug|info)' > /dev/null; then
  echo "[WARN] console.log found in staged files"
  echo "Consider removing console statements before committing."
fi

echo "[PASSED] All pre-commit checks passed!"
