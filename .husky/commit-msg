#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Get the commit message
commit_msg=$(cat "$1")

# Check commit message format (Conventional Commits)
if ! echo "$commit_msg" | grep -qE '^(feat|fix|docs|style|refactor|test|chore|perf|ci|build)(\(.+\))?: .{1,}$'; then
  echo "[ERROR] Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build"
  echo ""
  echo "Examples:"
  echo "  feat: add new Button component"
  echo "  fix(Input): resolve focus issue"
  echo "  docs: update README"
  echo ""
  exit 1
fi

# Check for Chinese characters in commit message
if echo "$commit_msg" | LC_ALL=C grep -q '[一-龥]'; then
  echo "[ERROR] Chinese characters found in commit message!"
  echo "Please use English for commit messages."
  exit 1
fi

echo "[PASSED] Commit message format is valid"

